<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#75977CB8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp">


        <ImageButton
            android:id="@+id/btn_stt_start"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="305dp"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="2dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="btn_stt_start"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mic"
            tools:ignore="SpeakableTextPresentCheck,ContentDescription,TouchTargetSizeCheck" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/Auto_btn"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:textSize="50sp"
            android:layout_weight="1"
            android:onClick="Auto_btnClicked"
            android:text="@string/Auto"
            android:fontFamily="@font/imcresoojin_font"
            android:textAllCaps="false"
            android:background="@drawable/main_btn"
            android:textColor="#A46B33C5"
            tools:ignore="UsingOnClickInXml,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/Passitive_btn"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:onClick="Passitive_btnClicked"
            android:text="@string/Manual"
            android:fontFamily="@font/imcresoojin_font"
            android:textAllCaps="false"
            android:textSize="50sp"
            android:background="@drawable/main_btn"
            android:textColor="#A46B33C5"
            tools:ignore="UsingOnClickInXml,DuplicateSpeakableTextCheck,TextContrastCheck" />

        <Button
            android:id="@+id/Train_btn"
            android:layout_width="330dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_marginTop="9dp"
            android:onClick="Train_btnClicked"
            android:text="@string/Train"
            android:textAllCaps="false"
            android:textSize="50sp"
            android:fontFamily="@font/imcresoojin_font"
            android:background="@drawable/main_btn"
            android:textColor="#A46B33C5"
            tools:ignore="UsingOnClickInXml,DuplicateSpeakableTextCheck,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:text="@string/Textbox"
            android:fontFamily="@font/imcresoojin_font"
            android:textColor="#473475"
            android:textSize="25sp" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button"
                    android:button="@null"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="@string/button1"
                    android:fontFamily="@font/imcresoojin_font"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_text"
                    android:textSize="25sp"
                    tools:ignore="TextContrastCheck" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button"
                    android:button="@null"
                    android:onClick="onRadioButtonClicked"
                    android:text="@string/button2"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_text"
                    android:textSize="25sp"
                    android:fontFamily="@font/imcresoojin_font"
                    tools:ignore="TextContrastCheck" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button"
                    android:button="@null"
                    android:onClick="onRadioButtonClicked"
                    android:text="@string/button3"
                    android:textAlignment="center"
                    android:textColor="@drawable/selector_text"
                    android:textSize="25sp"
                    android:fontFamily="@font/imcresoojin_font"
                    tools:ignore="TextContrastCheck" />
            </RadioGroup>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
